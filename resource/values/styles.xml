<?xml version="1.0" encoding="utf-8"?>
<resources>
    
   <style name="CustomCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
    <item name="buttonTint">@color/checkbox_tint</item>
</style>

    <!-- Estilo do AlertDialog -->
    <style name="MaterialAlertDialog_Theme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialButton_Dialog</item>
    </style>

    <!-- Estilo do botão do diálogo -->
    <style name="MaterialButton_Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">#CCC2DC</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>