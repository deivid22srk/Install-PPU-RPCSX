<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base do app -->
    <style name="Theme.PS3Downloader" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">#CCC2DC</item>
        <item name="colorOnPrimary">#1C2526</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorOnSurface">#E0E0E0</item>
        <item name="colorSurfaceVariant">#424242</item>
        <item name="colorOnSurfaceVariant">#B0BEC5</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="alertDialogTheme">@style/MaterialAlertDialog_Theme</item>
    </style>
    
   <style name="CustomCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
    <item name="buttonTint">@color/checkbox_tint</item>
</style>

    <!-- Estilo do AlertDialog -->
    <style name="MaterialAlertDialog_Theme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialButton_Dialog</item>
    </style>

    <!-- Estilo do botão do diálogo -->
    <style name="MaterialButton_Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">#CCC2DC</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>