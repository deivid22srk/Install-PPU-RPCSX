<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?attr/colorSurface"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <!-- Game Cover Image -->
        <ImageView
            android:id="@+id/image_game_cover"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_games"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

        <!-- Game Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_game_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/button_options"
            app:layout_constraintStart_toEndOf="@+id/image_game_cover"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="The Last of Us™" />

        <!-- Game Region & Size -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_game_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toStartOf="@+id/button_options"
            app:layout_constraintStart_toEndOf="@+id/image_game_cover"
            app:layout_constraintTop_toBottomOf="@+id/text_game_title"
            tools:text="BLUS30947 • 12.3 GB" />

        <!-- Mod Status -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_mod_status"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Mods"
            android:visibility="gone"
            app:chipIcon="@drawable/ic_check"
            app:layout_constraintStart_toEndOf="@+id/image_game_cover"
            app:layout_constraintTop_toBottomOf="@+id/text_game_details"
            tools:visibility="visible" />

        <!-- Options Menu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_options"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_menu_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>